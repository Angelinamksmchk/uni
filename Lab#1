using System;

namespace HelloWorld1
{
    class Program
    {
        static void Main(string[] args)
        {
            //Обчислення об’єму конуса по відомим значенням висоти та радіуса основи.

            double pi = 3.141592;
            int x = 3;


            Console.WriteLine("Enter high:");
            double high = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("High is: " + high);

            Console.WriteLine("Enter radius:");
            double r = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Radius is: " + r);

            Console.WriteLine("Радіус в квадраті = ");
            double rsqrt = r * r;

            Console.WriteLine(rsqrt);


            double result = (pi * rsqrt * high)/x;


            Console.WriteLine("Обєм конуса = " + result);



        }
    }
}

